---
import MainLayout from "@/layouts/MainLayout.astro";
import CreateEventLayout from "@/layouts/CreateEventLayout.astro";
import CreateEvent from "@/components/vue/events/create/CreateEvent.vue";

const user = Astro.locals.user;
const userId = user ? user.id : null;

if (!userId) return Astro.redirect("/signin");
---

<CreateEventLayout title="Crear evento">
  <section>
    <CreateEvent client:load userId={userId} />
  </section>
</CreateEventLayouts>
